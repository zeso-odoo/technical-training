<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available':True}</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" decoration-success="state in ('offer_accepted','offer_received')" decoration-info="state=='sold'" decoration-muted="state=='offer_accepted'" >
                <header>
                    <button name="%(estate.estate_property_add_offer_action)d" type="action" string="Add Offer"/>
                </header>
                <field name="name"/>
                <field name="postcode"/>
                <field name="tag_ids" widget='many2many_tags' options="{'color_field':'color'}"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button string="Sold" name="action_sold" type="object" class="oe_highlight" invisible="state in ('sold','canceled')"/>
                    <button string="Cancel" name="action_cancel" type="object" class="oe_highlight" invisible="state in ('sold','canceled')"/>
                    <field name="state" widget='statusbar' statusbar_visible='new,offer_received,offer_accepted,sold'/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        </group>
                        <group></group>
                        <group>
                            <field name="property_type_id" options="{'no_create':true}"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="image"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible='not garden'/>
                                    <field name="living_area" />
                                    <field name="garden_orientation" invisible='not garden'/>
                                    <field name="total_area"/> 
                                    <field name="state"/>
                                    <field name="active"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name='offer_ids' readonly="state in ('offer_accepted','sold','canceled')">
                                        <tree string="offer" editable="top" decoration-success="status=='accepted'" decoration-danger="status=='refused'" >
                                            <field name="price"/>
                                            <field name="partner_id"/>
                                            <field name="validity"/>
                                            <field name="date_deadline"/>
                                            <button name="action_accept" string="Accept" type="object" icon="fa-check"  invisible="status in ('accepted','refused')"/>
                                            <button name="action_refuse" string="Refuse" type="object" icon="fa-times" invisible="status in ('accepted','refused')"/>
                                            <field name="status" readonly="1"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="salesman_id" />
                                        <field name="buyer_id" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>   
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>        
            </form>
        </field>
    </record>
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">

            <kanban default_group_by='state' records_draggable="1">
                <field name="state"/>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
                <field name="tag_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                Expected price : <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                Best price :<field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'">
                                Selling price : <field name="selling_price"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                <filter name="date_availability" domain="[('state','in',('new','offer_received'))]"/>
                <filter string="State" name="active" domain="['|',('state','=','offer_received')]"/>
                <group expand="1" string="Group By">
                    <filter string="Post Code" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms'}"/>
                </group>
            </search>
        </field>
    </record>
