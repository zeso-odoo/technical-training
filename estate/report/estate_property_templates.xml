<odoo>
    <template id="report_property_offers_templates">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <!-- <div>
                        <img t-att-src="image_data_uri(property.salesman_id.company_id.logo)"></img>
                    </div>
                    <hr/> -->
                    <div>
                        <t t-out="property.salesman_id.company_id.name"/>
                    </div>
                    <div>
                        <t t-out="property.salesman_id.company_id.street"/>
                    </div>
                    <div>
                        <t t-out="property.salesman_id.company_id.city"/>
                        <t t-out="property.salesman_id.company_id.zip"/>
                    </div>
                    <div>
                        <t t-out="property.salesman_id.company_id.country_id.name"/>
                    </div>
                   <br/>
                   <div class="page">
                        <h1>
                            <strong>Salesman : </strong>
                            <span t-field="property.salesman_id"/>
                        </h1>
                        <t t-call="estate.property_list"/>
                   </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_res_users_offers">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web-external_lauout">
                    <!-- <div>
                        <img t-att-src="image_data_uri(user.company_id.logo)"></img>
                    </div>
                    <hr/> -->
                    <div>
                        <t t-out="user.company_id.name"/>
                    </div>
                    <div>
                        <t t-out="user.company_id.street"/>
                    </div>
                    <div>
                        <t t-out="user.company_id.city"/>
                        <t t-out="user.company_id.zip"/>
                    </div>
                    <div>
                        <t t-out="user.company_id.country_id.name"/>
                    </div>
                    <br/>
                    <div class="page">
                        <h1>
                            <strong>Salesman : </strong>
                            <span t-field="user.name"/>
                        </h1>
                        <t t-foreach="user.property_ids" t-as="property">
                            <t t-call="estate.property_list"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="property_list">
        <h2>
            <span t-field="property.name"/>
        </h2>
        <div>
            <strong>Expected Price:</strong>
            <span t-field="property.expected_price"/>
        </div>
        <div>
            <strong>Status:</strong>
            <span t-field="property.state"/>
        </div>
        <div>
            <t t-if="property.state"/>
        </div>
        <div>
            <t t-if="property.state=='sold'">
                Invoice has been created !
            </t>
        </div>
        <t t-call="estate.offer_table">
            <t t-set="offers" t-value="property.mapped('offer_ids')"/>
        </t>
    </template>
    <template id="offer_table">
        <t t-if="offers">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity(dyas)</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="offers" t-as="offer">
                        <tr>
                            <td>
                                <span t-field="offer.price"/>
                            </td>
                            <td>
                                <span t-field="offer.partner_id"/>
                            </td>
                            <td>
                                <span t-field="offer.validity"/>
                            </td>
                            <td>
                                <span t-field="offer.date_deadline"/>
                            </td>
                            <td>
                                <span t-field="offer.status"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
        <t t-else="">
            No offers have been created yet.
        </t>
    </template>
    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Properties</t>
            <div class="oe_structure">
                <div class="container">
                    <div class="row">
                        <form action="/estate/filter_properties" method="POST"
                            class="d-flex align-items-center" style="margin-bottom:20px;">
                            <lable for="datepicker">Pick Date:</lable>
                            <input type="date" id="datepicker" name="datepicker"
                                class="form-control-o_website_form_date"/>
                            <button type="submit" class="btn btn-primary">Listed After</button>
                        </form>
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img t-if="property.image" t-att-src="image_data_uri(property.image)" style = "height:125px"/>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-out="property.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <div>Price: <t t-out="property.expected_price"/></div>
                                            <div>Type: <t t-out="property.property_type_id.name"/></div>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="property_detail_template">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <img t-if="property.image" t-att-src="image_data_uri(property.image)"
                                class="card-img-top" alt="Property Image" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="card-title">
                                    <t t-out="property.name" />
                                </h2>
                                <p class="card-text">
                                    <strong>Price:</strong>
                                    <t t-out="property.expected_price" />
                                    <br />
                                    <strong>Type:</strong>
                                    <t t-out="property.property_type_id.name" />
                                    <br />
                                    <strong>Tags:</strong>
                                    <t t-foreach="property.tag_ids" t-as="tag">
                                        <t t-out="tag.name" />
                                    </t>
                                    <br />
                                    <strong>Bedroom:</strong>
                                    <t t-out="property.bedrooms" />
                                    <br />
                                    <strong>Garden area:</strong>
                                    <t t-out="property.garden_area" />
                                    <br />
                                    <strong>Description:</strong>
                                    <t t-out="property.description" />
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="filter_property">
        <t t-call="website.layout">
            <t t-set="title">Properties</t>
            <div class="oe_structure">
                <div class="container">
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img t-if="property.image" t-att-src="image_data_uri(property.image)" style = "height:125px"/>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-out="property.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <div>Price: <t t-out="property.expected_price"/></div>
                                            <div>Type: <t t-out="property.property_type_id.name"/></div>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>