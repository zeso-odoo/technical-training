<odoo>
    <record id="estate_property_add_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.add.offer.form</field>
        <field name="model">estate.property.add.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                       </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_make_offers_wizard" type="object" string="save" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="estate_property_add_offer_action" model="ir.actions.act_window">
        <field name="name">Add offer to Properties</field>
        <field name="res_model">estate.property.add.offer</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="estate_property_add_offer_view_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_estate_property"/>
    </record>
</odoo>