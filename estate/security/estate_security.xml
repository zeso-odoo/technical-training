<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_estate_brokerage"/>
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>
    <record id="estate_rule_agent_property" model="ir.rule">
        <field name="name">Agent can see or modify their own properties</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="domain_force">['|',('salesman_id','=',False),('salesman_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('estate_group_user'))]"/>
    </record>
</odoo>
